# =====================================================
# Setup Instructions
# =====================================================
# 1. Copy this file to .env
# 2. Replace all placeholder values with actual configuration
# 3. Ensure .env is listed in .gitignore
# 4. Restrict .env file permissions to required users only
# 5. Back up values securely outside of version control

# =====================================================
# API Configuration
# =====================================================
# Backend API communication settings
REACT_APP_API_URL=https://api.agentbuilder.hakkoda.io
REACT_APP_API_TIMEOUT=30000
REACT_APP_API_ENDPOINT=https://api.gateway.region.amazonaws.com/stage

# =====================================================
# AWS Configuration 
# =====================================================
# AWS service and authentication settings
REACT_APP_AWS_REGION=us-east-1
REACT_APP_USER_POOL_ID=us-east-1_xxxxxxxx
REACT_APP_USER_POOL_WEB_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# =====================================================
# Application Settings
# =====================================================
# General application configuration
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# =====================================================
# Feature Flags
# =====================================================
# Toggle application features
REACT_APP_ENABLE_DEBUG_MODE=false
REACT_APP_ENABLE_ANALYTICS=true

# =====================================================
# Performance Configuration
# =====================================================
# Performance and optimization settings
REACT_APP_MAX_CONCURRENT_REQUESTS=10
REACT_APP_CACHE_DURATION=3600

# =====================================================
# Security Settings
# =====================================================
# Security-related configuration
REACT_APP_SESSION_TIMEOUT=3600000
REACT_APP_REQUIRE_MFA=true
REACT_APP_MIN_PASSWORD_LENGTH=12

# =====================================================
# Logging Configuration
# =====================================================
# Logging and monitoring settings
REACT_APP_LOG_LEVEL=info
REACT_APP_ENABLE_ERROR_REPORTING=true